<Page x:Class="PR22102_Petsevich_authorization.Pages.Autho"
      Background="White"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="PR22102_Petsevich_authorization.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="166">
            <TextBlock Text="Login" Margin="0,0,0,5" Width="208"/>
            <TextBox x:Name="tbLogin" Margin="0,0,0,10"/>
            <TextBlock Text="Password" Margin="0,0,0,5" Width="210"/>
            <PasswordBox x:Name="tbPassword" Margin="0,0,0,10"/>
            <Button x:Name="btnEnter" Content="Enter" Click="btnEnter_Click" Width="167"/>
            <Frame x:Name="MainFrame"/>
        </StackPanel>
    </Grid>
</Page>
